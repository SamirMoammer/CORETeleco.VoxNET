@model ServicioModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar Servicio
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Servicio" method="post">
            <input asp-for="idServicio" type="hidden" class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el servicio: @Html.DisplayTextFor(m => m.nombreServicio)?
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Servicio" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>
