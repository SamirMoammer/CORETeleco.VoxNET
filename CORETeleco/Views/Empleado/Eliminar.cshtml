@model EmpleadoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar Empleado
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Empleado" method="post">
            <input asp-for="idEmpleado" type="hidden" class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar al empleado : @Html.DisplayTextFor(m => m.nombreEmpleado) ?
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Empleado" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>


