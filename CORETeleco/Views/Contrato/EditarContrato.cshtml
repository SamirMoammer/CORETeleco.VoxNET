@model ContratoModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar Contrato
    </div>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Contrato" method="post">
            <input asp-for="idContrato" type="hidden" class="form-control">
            <div class="mb-3">
                <label class="form-label">Fecha Inicio</label>
                <input asp-for="fechaInicioContrato" type="date" class="form-control">
                <span asp-validation-for="fechaInicioContrato" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha Fin</label>
                <input asp-for="fechaFinContrato" type="date" class="form-control">
                <span asp-validation-for="fechaFinContrato" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <input asp-for="descripcionContrato" type="text" class="form-control">
                <span asp-validation-for="descripcionContrato" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Estado</label>
                <input asp-for="estadoContrato" type="checkbox" class="form-check-input">
                <span asp-validation-for="estadoContrato" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Cliente</label>
                <input asp-for="idCliente" type="number" class="form-control">
                <span asp-validation-for="idCliente" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Servicio</label>
                <input asp-for="idServicio" type="number" class="form-control">
                <span asp-validation-for="idServicio" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Contrato" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>
