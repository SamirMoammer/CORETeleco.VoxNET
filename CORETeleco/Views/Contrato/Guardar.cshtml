@model CORETeleco.Models.ContratoModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Crear Contrato
    </div>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="Contrato" method="post">
            <div class="mb-3">
                <label asp-for="fechaInicioContrato" class="form-label">Fecha de Inicio</label>
                <input asp-for="fechaInicioContrato" class="form-control" />
                <span asp-validation-for="fechaInicioContrato" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="fechaFinContrato" class="form-label">Fecha de Fin</label>
                <input asp-for="fechaFinContrato" class="form-control" />
                <span asp-validation-for="fechaFinContrato" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="descripcionContrato" class="form-label">Descripción</label>
                <input asp-for="descripcionContrato" class="form-control" />
                <span asp-validation-for="descripcionContrato" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="estadoContrato" class="form-label">Estado</label>
                <input asp-for="estadoContrato" type="checkbox" class="form-check-input" />
                <span asp-validation-for="estadoContrato" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="idCliente" class="form-label">Cliente</label>
                <input asp-for="idCliente" class="form-control" />
                <span asp-validation-for="idCliente" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="idServicio" class="form-label">Servicio</label>
                <input asp-for="idServicio" class="form-control" />
                <span asp-validation-for="idServicio" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Contrato" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>
