@model ClienteModel
@{
    ViewData["Title"] = "InsertarCliente";  
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Insertar Cliente
    </div>
    <div class="card-body">

        <form asp-action="InsertarCliente" asp-controller="CLiente" method="post">

            <div class="mb-3">
                <label class="form-label">Cédula</label>
                <input asp-for="cedulaCliente" class="form-control" />
                <span asp-validation-for="cedulaCliente" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Nombre completo</label>
                <input asp-for="nombreCliente" class="form-control" />
                <span asp-validation-for="nombreCliente" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Teléfono</label>
                <input asp-for="telefonoCliente" class="form-control" />
                <span asp-validation-for="telefonoCliente" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Dirección</label>
                <input asp-for="direccionCliente" class="form-control" />
                <span asp-validation-for="direccionCliente" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Correo electrónico</label>
                <input asp-for="correoCliente" class="form-control" />
                <span asp-validation-for="correoCliente" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input asp-for="passwordCliente" type="password" class="form-control" />
                <span asp-validation-for="passwordCliente" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrarme</button>
            <a asp-action="Listar" asp-controller="Cliente" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>