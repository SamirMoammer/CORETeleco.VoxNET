@model CORETeleco.Models.ProductoFacturaModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar Producto de Factura
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="ProductoFactura" method="post">
            <input asp-for="idFactura" type="hidden" class="form-control">
            <input asp-for="idProducto" type="hidden" class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el producto de la factura?
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="ProductoFactura" asp-route-idFactura="@Model.idFactura" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>
