@model ProductoFacturaModel
@{
    ViewData["Title"] = "Agregar Producto a Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Agregar Producto a Factura
    </div>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="ProductoFactura" method="post">
            <input type="hidden" name="idFactura" value="@ViewData["idFactura"]" />
            <div class="mb-3">
                <label class="form-label">Producto</label>
                <!-- Aquí deberías incluir un dropdownlist o similar para seleccionar el producto -->
                <!-- Ejemplo: -->
                <select asp-for="idProducto" class="form-control" asp-items="@(new SelectList(ViewBag.Productos, "Value", "Text"))">
                    <option value="">Seleccione un producto</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Cantidad</label>
                <input asp-for="cantidad" type="number" class="form-control">
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="ProductoFactura" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>
