@model List<CORETeleco.Models.ProductoFacturaModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de Productos en Factura
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="ProductoFactura" class="btn btn-success"><i class="bi bi-plus-circle"></i> Agregar Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID Factura</th>
                    <th>ID Producto</th>
                    <th>Cantidad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.idFactura</td>
                        <td>@item.idProducto</td>
                        <td>@item.cantidad</td>
                        <td>
                            <a asp-action="Editar" asp-controller="ProductoFactura" class="btn btn-primary btn-sm" asp-route-idFactura="@item.idFactura" asp-route-idProducto="@item.idProducto">Editar</a>
                            <a asp-action="Eliminar" asp-controller="ProductoFactura" class="btn btn-danger btn-sm" asp-route-idFactura="@item.idFactura" asp-route-idProducto="@item.idProducto">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
