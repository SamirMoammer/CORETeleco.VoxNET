@model RolModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar Rol
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Rol" method="post">
            <input asp-for="idRol" type="hidden" class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el rol: @Html.DisplayTextFor(m => m.nombreRol)?
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Rol" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

